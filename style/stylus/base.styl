@import url('https://fonts.googleapis.com/css?family=Josefin+Sans|Raleway|Montserrat+Subrayada');

html, body {
	-webkit-tap-highlight-color: rgba(255, 255, 255, 0);
	margin: 0;
	padding: 0;
	font-family: 'Raleway', sans-serif;

}

*,
*:before,
*:after {
  box-sizing: inherit;
}

html {
	height: 100%;
	box-sizing: border-box;
	// background-color: $primary-color;
	// background: url("/style/images/background.jpg") center center / cover;
}

