@import url('https://fonts.googleapis.com/css?family=Josefin+Sans|Raleway:400,600|Montserrat+Subrayada');

html, body {
	-webkit-tap-highlight-color: rgba(255, 255, 255, 0);
	margin: 0;
	padding: 0;
	font-family: 'Raleway', sans-serif;
}

*,
*:before,
*:after {
  box-sizing: inherit;
}

html {
	height: 100%;
	box-sizing: border-box;
}

figure {
	margin: 0;
}

h1, h2, h3, h4, h5 {
	font-family: 'Montserrat Subrayada', sans-serif;
	margin: 0;
	letter-spacing: -1px;
}

h1 {
	font-size: 44px;
}

h2 {
	font-size: 24px;
}

p {
	font-size: 16px;
	line-height: 1.5;
	font-weight: 100;
	margin: 0;
}

li {
	margin-bottom: 20px;
}

a {
	text-decoration: none;
	color: inherit;
}

.desktop-only {
	display: none;
}

#app {
	overflow: hidden;
	>div.content {
		.modal-background {
			position: fixed;
			width: 100%;
			height: 100%;
			background: rgba(0, 0, 0, 0);
			z-index: -1;
			transition: background .75s;
		}
		main {
			// transition: transform .75s;
			// transform: translate3d(0, 0, 0) scale(1);
		}
		&.modal-open {
			overflow: hidden;
			.modal-background {
				background: rgba(0, 0, 0, 0.9);
				z-index: 998;
			}
			main {
				// transform: scale(1.1);
			}
		}
	}
}

@media screen and (min-width: $tablet) {

  .mobile-only {
    display: none;
  }

	.desktop-only {
		display: block;
	}

	h1 {
		font-size: 50px;
	}

	h2 {
		font-size: 30px;
	}

	p {
		font-size: 20px;
		line-height: 1.6;
	}

}

