html, body {
	-webkit-tap-highlight-color: rgba(255, 255, 255, 0);
	margin: 0;
	padding: 0;
	background: $ultra-light-grey;
	color: $primary-black;
}

*,
*:before,
*:after {
  box-sizing: inherit;
}

html {
	height: 100%;
	box-sizing: border-box;
	background-color: $primary-color;
}

