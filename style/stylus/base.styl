figure {
	margin: 0;
}

h1, h2, h3, h4, h5 {
	font-weight: 400;
	margin: 0;
}

h1 {
	font-size: 22px;
}

h2 {
	font-size: 18px;
}

p {
	font-size: 14px;
	font-weight: 100;
	margin: 0;
}

ul {
	list-style: none;
	padding: 0;
	margin: 0;
}

a {
	text-decoration: none;
	color: inherit;
}

.desktop-only {
	display: none;
}

@media screen and (min-width: $tablet) {

	body {
		padding-bottom: 200px;
	}

  .mobile-only {
    display: none;
  }

	.desktop-only {
		display: block;
	}

}

@media screen and (min-width: $desktop) {
	h1 {
		font-size: 26px;
	}

	h2 {
		font-size: 20px;
	}

	p {
		font-size: 16px;
	}
}
