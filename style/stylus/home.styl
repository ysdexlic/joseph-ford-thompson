.landing {
	width: 100%;
  height: 90vh;
	position: relative;
	margin-bottom: 20px;
	>div {
		position: absolute;
		bottom: 0;
		margin: auto;
		left: 0;
		right: 0;
	}
	&-text {
		text-align: center;
		padding: 20px 0;
		z-index: 30;
		h1 {
			color: $pink;
			text-shadow: 1px 1px 0px rgba(255, 0, 0, 0.5);

		}
		h2 {
			color: $green;
			text-shadow: 1px 1px 0px rgba(0, 60, 227, 0.74);
		}
	}
	&-image {
		position: absolute;
		top: 0;
		max-width: 420px;
		// border: 3px solid $black;
		background: url('/style/images/joe@2x.jpg') center center / cover no-repeat;
		z-index: 20;
	}
	&-gradient {
		position: absolute;
		z-index: 20;
		top: 0;
		opacity: 0.1;
		background: rgba(255, 255, 255, 0); /* For browsers that do not support gradients */
	  /* For Safari 5.1 to 6.0 */
	  background: -webkit-linear-gradient(left, #e833b2, #53a0fe 48%, #01dc57);
	  /* For Opera 11.1 to 12.0 */
	  background: -o-linear-gradient(left, #e833b2, #53a0fe 48%, #01dc57);
	  /* For Fx 3.6 to 15 */
	  background: -moz-linear-gradient(left, #e833b2, #53a0fe 48%, #01dc57);
	  /* Standard syntax */
	  background: linear-gradient(to right, #e833b2, #53a0fe 48%, #01dc57);
	}
	&-background {
		position: absolute;
		top: 0;
		background: rgba(255, 255, 255, 0); /* For browsers that do not support gradients */
	  /* For Safari 5.1 to 6.0 */
	  background: -webkit-linear-gradient(left, rgba(232, 51, 178, 0.65), #9dc9ff 50%, rgba(68, 220, 128, 0.74));
	  /* For Opera 11.1 to 12.0 */
	  background: -o-linear-gradient(left, rgba(232, 51, 178, 0.65), #9dc9ff 50%, rgba(68, 220, 128, 0.74));
	  /* For Fx 3.6 to 15 */
	  background: -moz-linear-gradient(left, rgba(232, 51, 178, 0.65), #9dc9ff 50%, rgba(68, 220, 128, 0.74));
		/* Standard syntax */
		background-image: linear-gradient(to right, rgba(232, 51, 178, 0.65), #9dc9ff 50%, rgba(68, 220, 128, 0.74));
	}
}

@media screen and (min-width: $tablet) {
	.landing-image {
		width: 50%;
		max-width: 420px;
		border: 3px solid $white;
		background: url('/style/images/joe@2x.jpg') center center / cover no-repeat;
	}
}
