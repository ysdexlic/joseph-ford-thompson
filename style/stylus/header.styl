header {
  display: table;
  padding: 10px;
  position: absolute;
  height: $header-height;
  width: 100%;
  box-sizing: border-box;
  z-index: 99;
  top: 0;
  .social-icons {
    text-align: right;
    color: $grey;
  }
  h1, h2, h3, h4 {
    color: $grey;
  }
  >div {
    display: table-cell;
    vertical-align: middle;
  }
}


@media screen and (min-width: $tablet) {
  header {
    padding: 10px 30px;
    position: relative;
    >div {
      display: table-cell !important;
    }
  }
}
