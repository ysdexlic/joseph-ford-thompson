header {
  padding: 10px 0;
  position: absolute;
  height: $header-height;
  width: 100%;
  box-sizing: border-box;
  z-index: 99;
  top: 0;
  .logo {
    position: relative;
    transform: rotate(3deg);
    background: url('/style/images/name.png') center center / contain no-repeat;
    width: 100%;
    height: 100%;
    margin: auto;
    transition: width .5s, margin .5s;
  }
}
