header.a {
  position: sticky;
  height: $header-height;
  width: 100%;
  box-sizing: border-box;
  z-index: 20;
  top: 0;

  .logo {
    position: relative;
    background: url('/style/images/logo.png') center center / contain no-repeat;
    width: 100%;
    height: 100%;
    margin: auto;
  }
  &.sticky {
    background-color: white !important;
    border-bottom: 1px solid grey;

    .logo {
      width: 40% !important;
      left: -30% !important;
    }
  }

}


header.b {
  padding: 5px 0
  position: sticky;
  height: $header-height;
  width: 100%;
  box-sizing: border-box;
  z-index: 20;
  transition: top .5s, background-color .5s;
  top: -50px;
  background-color: $primary-color;
  .logo {
    position: relative;
    background: url('/style/images/logo.png') center center / contain no-repeat;
    width: 100%;
    height: 100%;
    margin: auto;
    transition: width .5s, margin .5s;
  }

  &.sticky {
    top: 0;
    background-color: white;
    border-bottom: 1px solid grey;

    .logo {
      width: 40%;
      margin: 0;
    }

  }

}
