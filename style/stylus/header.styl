header {
  display: table;
  padding: 10px;
  position: absolute;
  height: $header-height;
  width: 100%;
  box-sizing: border-box;
  z-index: 99;
  top: 0;
  .social-icons {
    text-align: right;
    color: $grey;
    >a {
      width: 30px;
      height: 30px;
      display: inline-block;
      margin: 0 10px;
    }
    .l-icon {
      background: url('/style/images/linkedin.svg');
    }
    .t-icon {
      background: url('/style/images/twitter.svg');
    }
  }
  h1, h2, h3, h4 {
    color: $grey;
  }
  >div {
    display: table-cell;
    vertical-align: middle;
  }
}


@media screen and (min-width: $tablet) {
  header {
    padding: 10px 30px;
    position: relative;
    >div {
      display: table-cell !important;
    }
    .social-icons {
      .l-icon {
        background: url('/style/images/linkedin-dark.svg');
      }
      .t-icon {
        background: url('/style/images/twitter-dark.svg');
      }
    }
  }
}
