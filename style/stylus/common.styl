.plus {
  position: absolute;
  &.vertical {
    left: 10%;
    width: 20px;
    height: 50%;
    background: url('/style/images/plus-1.png') center center / contain no-repeat;
  }
  &.horizontal {
    left: 10%;
    width: 80%;
    height: 20px;
    background: url('/style/images/plus-2.png') center center / contain no-repeat;
  }
}

.modal {
  z-index: 999;
  position: fixed;
  background: #fff;
  top: 150%;
  width: 100vw;
  height: 100vh;
  padding: 30px;
  transition: top .5s ease-in-out;
  &.active {
    top: 0;
  }
}

.button {
  margin: 10px 0;
  span {
    display: block;
    width: 40px;
    height: 40px;
    line-height: 40px;
    text-align: center;
    border: 1px solid;
    border-radius: 50%;
    font-size: 30px;
    margin: auto;
    cursor: pointer;
  }
}
